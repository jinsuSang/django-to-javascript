<form action="{{urls.createURL}}" method="post">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="mb-3">
    <label for="title" class="form-label">
      <h2>제목</h2>
    </label>
    <input class="form-control" type="text" name="title" id="title" maxlength="100" />
  </div>

  <div class="mb-3">
    <label for="overview" class="form-label">
      <h2>줄거리</h2>
    </label>
    <textarea class="form-control" name="overview" id="overview" cols="100" rows="10"></textarea>
  </div>

  <div class="mb-3">
    <label for="poster-path" class="form-label">
      <h2>포스터 이미지 URL</h2>
    </label>
    <input class="form-control" type="text" name="poster-path" id="poster-path" maxlength="100" />
  </div>
  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-primary">등록</button>
  </div>
</form>